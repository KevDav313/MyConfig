  HostName bitbucket.org
  User gregbataille
  IdentityFile ~/.ssh/id_pix4d
Host speedy
  HostName bitbucket.org
  User gbataille_speedyrating
  IdentityFile ~/.ssh/id_speedy
Host worker_vm_test
  StrictHostKeyChecking=no
  User ubuntu
  IdentityFile ~/.ssh/id_rsa
Host supervisor_vm_test
  StrictHostKeyChecking=no
  User ubuntu
  IdentityFile ~/.ssh/id_rsa
