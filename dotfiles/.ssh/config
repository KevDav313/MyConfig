ServerAliveInterval 50

Host github.com
  IdentityFile ~/.ssh/id_rsa
# For vagrant virtual machines
Host 192.168.42.* *.logstream.dev
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
  User root
  LogLevel ERROR
